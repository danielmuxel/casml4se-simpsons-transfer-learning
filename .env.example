# Paths
DATA_DIR=data/processed
MODELS_DIR=models
INFER_INPUT_DIR=data/inference/input
INFER_OUTPUT_DIR=data/inference/output

# Seeds and data loading
SEED=42
BATCH_SIZE=32
NUM_WORKERS=4
RESIZE=256
IMG_SIZE=224
USE_COLOR_JITTER=true

# Training schedule
EPOCHS=2
EARLY_STOP=5

# Finetune modes (comma-separated)
FINETUNE_MODES=linear_probe,last2_blocks,full

# Execution controls
RUN_TRAINING=true
RUN_INFERENCE=true

# Optimization
LR_BACKBONE=0.0003
LR_HEAD=0.001
WEIGHT_DECAY=0.0001
ROP_FACTOR=0.5
ROP_PATIENCE=2

# Filenames (base names; per-mode suffixes are added in code)
BEST_MODEL=simpsons_effb0_best_v2.pt
CM_FILE=confusion_matrix.npy